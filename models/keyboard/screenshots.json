{
  "defaults": {
    "orthographic": true,
    "background": "1a0033",
    "wireframe": false
  },
  "views": [
    {
      "name": "isometric",
      "camera": { "position": [100, 100, 100], "target": [0, 0, 0] },
      "zoom": 1.0,
      "comment": "Wide isometric view to see if model is visible at all"
    },
    {
      "name": "side",
      "camera": { "position": [150, 0, 0], "target": [0, 0, 0] },
      "zoom": 1.0,
      "comment": "Wide side view from +X showing pitch rotation"
    },
    {
      "name": "wireframe",
      "camera": { "position": [100, 100, 100], "target": [0, 0, 0] },
      "zoom": 1.0,
      "wireframe": true,
      "comment": "Wireframe view for debugging geometry visibility"
    },
    {
      "name": "top",
      "camera": { "position": [0, 0, 200], "target": [0, 0, 0] },
      "zoom": 0.8,
      "comment": "Wide top-down view"
    }
  ]
}
